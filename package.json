{
  "name": "star-battle-patterns",
  "version": "1.0.0",
  "description": "Offline pattern miner for Star Battle schema-based solver",
  "type": "module",
  "main": "dist/cli/index.js",
  "scripts": {
    "build": "tsc",
    "mine-patterns": "node dist/cli/index.js",
    "test": "node dist/cli/test.js",
    "test:simple": "npm run build && node dist/cli/test.js",
    "test:solver": "npm run build && node dist/cli/testSolver.js",
    "test:valid": "npm run build && node dist/cli/testValid.js",
    "test:manual": "npm run build && node dist/cli/testManual.js",
    "test:completion": "npm run build && node dist/cli/testCompletion.js",
    "test:mining": "npm run build && npm run mine-patterns -- --board-size 10 --stars 2 && node dist/cli/testMining.js"
  },
  "keywords": [
    "star-battle",
    "pattern-mining",
    "puzzle-solver"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {}
}

